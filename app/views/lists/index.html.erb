<h1>Ventas Registradas</h1>
<h1>Registro por venta</h1>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th>Costo</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.producto %></td>
        <td><%= list.costo %></td>
        <td><%= list.cantidad %></td>
        <td><%= link_to ' Show ', list %></td>
        <td><%= link_to ' Edit ', edit_list_path(list) %></td>
        <td><%= link_to ' Destroy ', list, method: :delete, data: { confirm: '  Esta Seguro que quiere borrar esta Lista? ' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>




